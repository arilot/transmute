provider "aws" {
    access_key = "{{ aws_key }}"
    secret_key = "{{ aws_secret }}"
    region = "{{ aws_region }}"
}

terraform {
  backend "s3" {
    bucket = "terraform.{{ clusterName }}"
    key    = "terraform.tfstate"
    region = "{{ aws_region }}"
    access_key = "{{ aws_key }}"
    secret_key = "{{ aws_secret }}"

  }
}

variable "cluster-name" {
  default = "clusterName"
  type    = "string"
}
